{
  "expo": {
    "name": "FMT News",
    "slug": "FMT-News-App",
    "version": "2.2.0",
    "icon": "./app/assets/images/icon_FMT.png",
    "scheme": "fmtnews",
    "userInterfaceStyle": "automatic",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.freemalaysiatoday.app.fmtnews.ios",
      "googleServicesFile": "./GoogleService-Info.plist",
      "jsEngine": "hermes",
      "infoPlist": {
        "LSApplicationQueriesSchemes": [
          "fmtnews"
        ]
      }
    },
    "android": {
      "edgeToEdgeEnabled": true,
      "googleServicesFile": "./google-services.json",
      "adaptiveIcon": {
        "foregroundImage": "./app/assets/images/ic_launcherA.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.freemalaysiatoday.app.fmtnews.android",
      "permissions": [
        "POST_NOTIFICATIONS"
      ],
      "jsEngine": "hermes"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./app/assets/images/ic_launcherA.png"
    },
    "plugins": [
      "./plugins/withNotificationColorPlugin",
      "./plugins/withAndroidxMedia",
      "./plugins/withTextEpsilonFix",
      "expo-router",
      "expo-font",
      "@react-native-firebase/app",
      "@react-native-firebase/messaging",
      [
        "expo-splash-screen",
        {
          "image": "./app/assets/images/ic_launcherA.png",
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "react-native-google-mobile-ads",
        {
          "androidAppId": "ca-app-pub-1691191334203390~5037677560",
          "android_app_id": "ca-app-pub-1691191334203390~5037677560",
          "iosAppId": "ca-app-pub-1691191334203390~9795180220",
          "ios_app_id": "ca-app-pub-1691191334203390~9795180220"
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./app/assets/images/icon_FMT.png",
          "color": "#ffffff",
          "androidMode": "default",
          "androidCollapsedTitle": "New messages"
        }
      ],
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static",
            "buildReactNativeFromSource": true
          },
          "android": {
            "extraMavenRepos": [
              "../../node_modules/@notifee/react-native/android/libs"
            ]
          }
        }
      ],
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "77fd98c7-01bb-4b3c-963e-4815cea0996c"
      },
      "router": {
        "origin": false
      }
    },
    "owner": "mohiteas"
  },
  "react-native-google-mobile-ads": {
    "androidAppId": "ca-app-pub-1691191334203390~5037677560",
    "android_app_id": "ca-app-pub-1691191334203390~5037677560",
    "iosAppId": "ca-app-pub-1691191334203390~9795180220",
    "ios_app_id": "ca-app-pub-1691191334203390~9795180220"
  }
}
